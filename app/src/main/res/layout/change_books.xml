<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a5d8f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#6be6ef">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="管理图书"
            android:textSize="25sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="账号："
            android:textSize="20sp" />

        <EditText
            android:id="@+id/bId"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_bg"
            android:inputType="text"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="书名："
            android:textSize="20sp" />

        <EditText
            android:id="@+id/bName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_bg"
            android:inputType="text"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="版本："
            android:textSize="20sp" />

        <EditText
            android:id="@+id/bVersion"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_bg"
            android:inputType="text"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="出版社："
            android:textSize="20sp" />

        <EditText
            android:id="@+id/bPress"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_bg"
            android:inputType="text"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="作者："
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/bAuthor"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_bg"
            android:inputType="text"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="描述："
            android:textSize="20sp" />

        <EditText
            android:id="@+id/bDesc"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_bg"
            android:inputType="text"
            android:maxLines="4"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="25sp" />

        <Button
            android:id="@+id/bsave"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="#f5bc6e"
            android:text="增加"
            android:textSize="20sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/query_book"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="***请输入书名!***"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bquery"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/query_book"
            android:background="#f5bc6e"
            android:text="查询"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_query_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>


    </LinearLayout>
</LinearLayout>