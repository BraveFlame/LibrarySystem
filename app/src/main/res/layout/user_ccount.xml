<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#a5d8f5"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#68caed">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的账户"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/renew_ccount"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/renew" />
    </RelativeLayout>


    <TextView
        android:id="@+id/usercId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号："
        android:layout_marginLeft="10dp"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/user_property"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:text="属性："/>


    <TextView
        android:id="@+id/usercname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名："
        android:layout_marginLeft="10dp"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/usercsex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别："
        android:layout_marginLeft="10dp"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/usercprofession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="专业："
        android:layout_marginLeft="10dp"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/userchobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="书籍爱好："
        android:layout_marginLeft="10dp"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/usercprebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前借阅："
        android:layout_marginLeft="10dp"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/usercwpastbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="即将到期："
        android:layout_marginLeft="10dp"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/userclate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="逾期书本："
        android:layout_marginLeft="10dp"
        android:textSize="25sp" />




    <TextView
        android:id="@+id/userclevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="借阅等级："
        android:layout_marginLeft="10dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/userctel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系方式："
        android:layout_marginLeft="10dp"
        android:textSize="25sp" />



    <Button
            android:id="@+id/usercpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="120dp"
            android:text="修改密码"
            android:textSize="25sp" />

</LinearLayout>