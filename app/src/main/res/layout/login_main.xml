<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.librarysystem.activity.Login"
    >



        <ImageView
            android:id="@+id/login_image_label"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@mipmap/login_label" />

        <TextView
            android:id="@+id/login_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_image_label"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="用户:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/input_login_username"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/login_username"
            android:layout_alignBottom="@+id/login_username"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/login_username"
            android:layout_toRightOf="@+id/login_username"
            android:hint="请输入学号/工号"
            android:maxLines="1"
            android:background="@drawable/edit_bg"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/login_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_username"
            android:layout_marginLeft="80dp"
            android:text="密码:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/input_login_password"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/login_password"
            android:layout_alignBottom="@+id/login_username"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/login_username"
            android:layout_toRightOf="@+id/login_username"
            android:hint="请输入登录密码"
            android:maxLines="1"
            android:inputType="textPassword"
            android:background="@drawable/edit_bg"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/remember_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_image_label"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="100dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/remember_password"
            android:layout_alignBottom="@+id/remember_password"
            android:layout_below="@id/input_login_password"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/remember_password"
            android:layout_toRightOf="@+id/remember_password"
            android:textColor="#FF560C"
            android:text="记住密码"
            android:textSize="18sp" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/remember_password"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="15dp"
            android:text="注册" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/remember_password"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/register_button"
            android:text="登录" />

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="110dp"
            android:layout_marginStart="150dp"
            android:text="忘记密码"
            android:textColor="#5A93F6"
            android:textSize="18sp" />
    </RelativeLayout>



