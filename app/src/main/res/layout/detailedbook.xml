<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a5d8f5">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
        android:background="#bc6f70">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:text="书本信息"/>
</RelativeLayout>

    <TextView
        android:id="@+id/detailed_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="书名："
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/detailed_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="编号："
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/detailed_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="版本："
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/detailed_press"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="出版社："
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/detailed_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="作者："
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/detailed_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="状态："
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/detailed_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="应还日期："
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/detailed_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="主要信息："
        android:maxLines="10"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
<Button
    android:id="@+id/detailed_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:text="借书"
    android:layout_marginLeft="80dp"
   />
    <Button
        android:id="@+id/book_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="40dp"
        android:text="预约"/>

    </LinearLayout>

</LinearLayout>